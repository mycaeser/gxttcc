<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caeser.gxttcc.dao.AddressDao">
	<select id="queryAddByID" resultType="com.caeser.gxttcc.entity.Address">
		SELECT  add_id,add_name,add_content,add_phone_owner,add_phone_number,add_email
		FROM tt_address
		WHERE add_id=#{id}
	</select>
	<select id="queryAddot" resultType="com.caeser.gxttcc.entity.Address">
		SELECT  add_id,add_name,add_content,add_phone_owner,add_phone_number,add_email
		FROM tt_address
		WHERE add_id >3
	</select>
	<update id="updateAddress" parameterType="com.caeser.gxttcc.entity.Address">
		update tt_address
		<set>
			<if test="addName != null">add_name=#{addName},</if>
			<if test="addContent != null">add_content=#{addContent},</if>
			<if test="addPhoneOwner != null">add_phone_owner=#{addPhoneOwner},</if>
			<if test="addPhoneNumber != null">add_phone_number=#{addPhoneNumber},</if>
			<if test="addEmail != null">add_email=#{addEmail}</if>
		</set>
		where add_id=#{addId}
	</update>
</mapper>   